<div class="col-lg-3 col-xs-6">
<%= form_for Service.new do |t| %>  
	<div class="box-body"> 
		<div class="form-group">

		<div class="input-group">
		<div class="input-group-addon">
		<i class="fa fa-heart"></i>

		</div>
	    <%= t.text_area :url, :placeholder => "URL goes here", class: "form-control" %> 
	    </div>
	    <br>

	    <div class="input-group">
		<div class="input-group-addon">
		<i class="fa fa-envelope-o"></i>

		</div>
	    <%= t.text_area :login_name, :placeholder => "Login name here", class: "form-control" %>
	    </div>
	    <br>

	   	<div class="input-group">
		<div class="input-group-addon">
		<i class="fa fa-envelope-o"></i>

		</div>
	    <%= t.text_area :login_password, :placeholder => "Password here", class: "form-control" %>  
	   	</div>
	    <br>

	<div> 
		<%= t.submit "Create", :class => "btn btn-success" %> 
	</div>
	</div>
	</div>
	</div>

<% end %>