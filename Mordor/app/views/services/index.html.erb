<div class="row">

    <% @services.each do |service| %> 
        <div class="col-lg-3 col-xs-6">

        <div class="small-box bg-aqua">
            <div class="inner">


	  	<h4><%= service.url %></h4> 
		<p>Username: <%= service.login_name %></p>
		<p>Password: <%= service.login_password %></p>
        <p>Provided by: <%= service.user.email %></p>
        <p>Group: <%= service.group_id %></p>
        <p>Current user: <%= current_user.id %></p>
        <p>Members: <%= service.members %></p>
		<%= link_to "", edit_service_path(service), class: "fa fa-gear" %>
        <%= link_to "", service, method: :delete, data: { confirm: "Do you want to delete this service?" }, class: "fa fa-minus-circle" %>
        </div>

        </div>	

        </div>


    <% end %>


<div class="row">
	<div class="col-lg-3 col-xs-6">

      <%= link_to 'Add Service', new_service_path, class: "btn btn-success"  %>	
    </div>